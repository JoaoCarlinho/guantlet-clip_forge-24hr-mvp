{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "enables the default permissions including file system access for drag-and-drop and export",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "core:event:allow-listen",
    "core:event:allow-emit",
    "core:path:allow-resolve",
    "core:path:allow-basename",
    "core:path:allow-dirname",
    "core:path:allow-join",
    "core:path:allow-resolve-directory",
    "dialog:allow-save",
    "fs:allow-write-file",
    "fs:allow-write-text-file",
    "fs:allow-remove",
    "fs:scope-temp",
    "fs:allow-temp-write",
    "shell:allow-open"
  ]
}
